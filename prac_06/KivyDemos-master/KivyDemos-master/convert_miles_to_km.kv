BoxLayout:
    orientation: "vertical"
    BoxLayout:
        TextInput:
            id: input_number
            multiline: False
            font_size: 78
        BoxLayout:
            orientation: "vertical"
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        text: ''
        font_size: 56